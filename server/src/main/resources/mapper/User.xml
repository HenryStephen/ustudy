<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.edu.nciae.ustudy.mapper.UserMapper">

	<!-- 通用查询映射结果 -->
	<resultMap id="BaseResultMap" type="cn.edu.nciae.ustudy.po.User">
		<id column="id" property="id"/>
		<result column="profile_pic" property="profilePic"/>
		<result column="password" property="password"/>
		<result column="username" property="username"/>
		<result column="real_name" property="realName"/>
		<result column="birthday" property="birthday"/>
		<result column="city" property="city"/>
		<result column="telephone" property="telephone"/>
		<result column="is_deleted" property="deleted"/>
	</resultMap>

	<!-- 通用查询结果列 -->
	<sql id="Base_Column_List">
        id, profile_pic, password, username, real_name, birthday, city, telephone, is_deleted
    </sql>

</mapper>
